@{
    ViewData["Title"] = "Página Inicial";
}

<style>
    /* Estilo geral */
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background-color: #fbeae8;
    }

    .home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #fbeae8;
    }

    .home-box {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        width: 100%;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

        /* Estilo do ícone e título */
        .home-box img {
            width: 100px;
            height: 100px;
            margin-bottom: 20px;
        }

        .home-box h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .home-box p {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 2rem;
        }

    /* Estilo dos botões */
    .btn-custom {
        background-color: #ff6b6b;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        margin: 10px;
        text-align: center;
        width: 80%;
        cursor: pointer;
        display: block;
    }

        .btn-custom:hover {
            background-color: #ff8566;
        }

</style>

<div class="home-container">
    <div class="home-box">
        <!-- Ícone de Contatos -->
        <img src="~/images/image.png" alt="Ícone de Contatos" />

        <h1>Bem-vindo!</h1>
        <p>Sistema de Controle de Contatos</p>

        <!-- Botões de Ação -->
        <a href="~/Contato/Index" class="btn btn-custom">Ver Contatos</a>
        <a href="~/Usuario/Index" class="btn btn-custom">Gerenciar Usuários</a>
    </div>
</div>
