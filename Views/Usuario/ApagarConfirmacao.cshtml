@model Trabalho_Agenda_Contatos.Models.UsuarioModel

@{
    ViewData["Title"] = "Confirmação de Exclusão de Usuário";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Roboto', sans-serif;
    }

    .delete-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background: linear-gradient(135deg, #4f8cff, #87cefa);
    }

    .delete-box {
        background-color: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        text-align: center;
    }

        .delete-box img {
            width: 80px;
            height: 80px;
            margin-bottom: 1.5rem;
        }

        .delete-box h3 {
            font-size: 1.8rem;
            margin-bottom: 2rem;
            color: #333;
        }

    .btn-custom {
        padding: 12px;
        border-radius: 8px;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #4f8cff;
        border: none;
        color: white;
        margin-bottom: 1rem;
    }

        .btn-primary:hover {
            background-color: #87cefa;
        }

    .btn-danger {
        background-color: #e74c3c;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
        }
</style>

<div class="delete-container">
    <div class="delete-box">
        <img src="~/images/remove_person.png" alt="Remover Usuário" />
        <h3>Tem certeza que deseja excluir o usuário (@Model.Nome)?</h3>

        <a class="btn btn-custom btn-primary w-100" asp-action="Index" asp-controller="Usuario" role="button">
            Cancelar exclusão
        </a>

        <a class="btn btn-custom btn-danger w-100 mt-2" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id" role="button">
            Confirmar exclusão
        </a>
    </div>
</div>
