@model Trabalho_Agenda_Contatos.Models.LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

<style>
    /* Estilo geral */
    body, html {
        height: 100%;
        margin: 0;
        font-family: 'Roboto', sans-serif;
        background-color: #fbeae8;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #fbeae8;
    }

    .login-box {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 450px;
        width: 100%;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        /* Estilo da imagem */
        .login-box img {
            width: 100px;
            height: 100px;
            margin-bottom: 20px;
        }

        /* Estilo dos títulos */
        .login-box h2 {
            font-size: 2.2rem;
            color: #333;
            margin-bottom: 1rem;
        }

    /* Estilo dos inputs */
    .form-group {
        width: 100%;
        margin-bottom: 1.5rem;
    }

        .form-group label {
            font-size: 1rem;
            color: #666;
            margin-bottom: 0.5rem;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
    }

    /* Estilo do botão de login */
    .btn-custom {
        background-color: #ff6b6b;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 1.2rem;
        border-radius: 5px;
        transition: background-color 0.3s ease;
        width: 100%;
        cursor: pointer;
    }

        .btn-custom:hover {
            background-color: #ff8566;
        }

    /* Estilo do link de esqueci a senha */
    .forgot-password {
        margin-top: 10px;
        font-size: 0.9rem;
        color: #ff6b6b;
        text-decoration: none;
    }

        .forgot-password:hover {
            text-decoration: underline;
        }

    /* Estilo da mensagem de erro */
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        margin-bottom: 1rem;
        text-align: center;
    }
</style>

<div class="login-container">
    <div class="login-box">
        <!-- Icone da agenda de contatos -->
        <img src="~/images/image.png" alt="Agenda de Contatos" />

        <h2>Login</h2>

        <!-- Exibe a mensagem de erro se existir -->
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger">
                @TempData["MensagemErro"]
            </div>
        }

        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login">
                @Html.ValidationMessageFor(x => x.Login)
            </div>

            <div class="form-group">
                <label for="senha">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" placeholder="Digite sua senha">
                @Html.ValidationMessageFor(x => x.Senha)
            </div>

            <button type="submit" class="btn btn-custom">Entrar</button>
        </form>

        <a href="#" class="forgot-password">Esqueci minha senha</a>
    </div>
</div>
